<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/buttongreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/event_image_details"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/event_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_image_details"
        android:layout_marginTop="5dp"
        android:text="Event  Name"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name_details"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="Event Description"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/event_price_text_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_description_details"
                android:layout_marginTop="3dp"
                android:text="參加活動的獎勵:"
                android:textColor="@android:color/black"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textStyle="bold" />

    <TextView
        android:id="@+id/event_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/event_price_text_details"
        android:text="Event Price"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/event_people_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_price_details"
                android:layout_marginTop="3dp"
                android:text="參加活動的餘額:"
                android:textColor="@android:color/black"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textStyle="bold" />

    <TextView
        android:id="@+id/event_quantity_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_price_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/event_people_details"
        android:text="Event  Quantity"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/event_place_text_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_quantity_details"
                android:layout_marginTop="3dp"
                android:text="參加活動的地點:"
                android:textColor="@android:color/black"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textStyle="bold" />

    <TextView
        android:id="@+id/event_place_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_quantity_details"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/event_place_text_details"
        android:text="Event  Place"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/event_date_text_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_place_details"
                android:layout_marginTop="3dp"
                android:text="參加活動的日期:"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold" />

            <TextView
        android:id="@+id/event_date_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_place_details"
        android:layout_marginTop="3dp"
                android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/event_date_text_details"
        android:text="Event  Date"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/event_Yes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_date_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="110dp"
        android:text="處理中..."
        android:textColor="@android:color/white"
        android:background="@drawable/button" />

    <Button
        android:id="@+id/event_No"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_date_details"
        android:layout_centerHorizontal="true"
        android:text="處理中..."
        android:layout_marginTop="3dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>