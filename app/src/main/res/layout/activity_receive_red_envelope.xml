<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiveRedEnvelopeActivity">


    <ImageView
        android:id="@+id/iv_get"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/layout_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_result1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="請將條碼給送禮人掃描"
            android:textColor="@android:color/white"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/txt_result2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(請等待送禮人完成動作"
            android:textColor="@android:color/white"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/txt_result3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=",才能離開此頁面)"
            android:textColor="@android:color/white"
            android:textSize="24dp" />
    </LinearLayout>
</RelativeLayout>