<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRecordsActivity"
    android:background="@drawable/user_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layou_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="交易紀錄"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

    <Button
        android:id="@+id/btn_event_record"
        android:layout_below="@+id/linear_layou_record"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="50dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/circle_button"
        android:textColor="@android:color/primary_text_light"
        android:textSize="23dp"
        android:text="報名活動列表" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btn_red_envelope_record"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/linear_layou_record"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_button"
        android:text="送紅包紀錄"
        android:textColor="@android:color/primary_text_light"
        android:textSize="23dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/record"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="23dp"/>

    <Button
        android:id="@+id/btn_red_envelope_record1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btn_event_record"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:background="@drawable/circle_button"
        android:text="收紅包紀錄"
        android:textColor="@android:color/primary_text_light"
        android:textSize="23dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_redeem_product_record"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btn_red_envelope_record"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="125dp"
        android:background="@drawable/circle_button"
        android:text="兌換商品紀錄"
        android:textColor="@android:color/primary_text_light"
        android:textSize="23dp" />
</LinearLayout>