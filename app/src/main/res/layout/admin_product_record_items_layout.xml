<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    app:cardElevation="15dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/admins_product_record_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admins Product Record Name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/admintextcolor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/admins_product_record_totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admins_product_record_name"
            android:text="Admins Product Record TotalPrice"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/admincolor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/admins_product_record_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admins_product_record_totalprice"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Admins Product Record Quantity"
            android:textColor="@color/admincolor"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/admins_product_record_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admins_product_record_quantity"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Admins Product Record User"
            android:textColor="@color/admincolor"
            android:textSize="16dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>