<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    app:cardElevation="15dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/admins_event_record_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Event Record User"
            android:textColor="@color/admintextcolor"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/admins_event_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Event Record Date"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/admincolor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/admins_event_record_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admins_event_record_date"
            android:text="Admin Event Record place"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/admincolor"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/admins_event_record_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admins_event_record_place"
            android:text="Admin Event Record status"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/admincolor"
            android:textSize="18dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>